{
  "expo": {
    "name": "trockly-app",
    "slug": "trockly-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/trocklyLogo.png",
    "platforms": [
      "android",
      "ios"
    ],
    "scheme": "trocklyapp",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Trockly needs access to your photo library to let you upload a profile picture.",
        "NSCameraUsageDescription": "Trockly may need camera access if you want to take a new profile photo.",
         "NSLocationWhenInUseUsageDescription": "Trockly needs your location to show you nearby trades and offers in your area."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#174359",
        "foregroundImage": "./assets/images/trockly-splash.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,

      "permissions": [
         "ACCESS_FINE_LOCATION",
         "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/trockly-splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#F1F1F1",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font",
    [
      "expo-image-picker",
      {
      "photosPermission": "Trockly needs access to your photos to upload your profile picture.",
      "cameraPermission": "Trockly needs camera access to take profile photos."
    }
    ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
